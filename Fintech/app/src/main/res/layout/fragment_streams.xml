<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_black"
    tools:context=".presentation.ui.channels.streams.StreamsFragment">

    <com.todkars.shimmer.ShimmerRecyclerView
        android:id="@+id/rv_stream"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:shimmer_recycler_item_count="7"
        app:shimmer_recycler_layout="@layout/placeholder_stream" />

    <include android:id="@+id/no_result_found"
        android:layout_gravity="center"
        layout="@layout/not_found_layout"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</FrameLayout>